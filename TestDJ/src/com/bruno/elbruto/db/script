        CREATE TABLE brutos (nombre VARCHAR(30) NOT NULL,
                     password VARCHAR(30),
                     nivel INT NOT NULL,
                     clasificacion INT,
                     propietario BOOL,
                     primary key(nombre))


        CREATE TABLE peleas (fecha DATE NOT NULL,
                     nombre VARCHAR(30) NOT NULL references brutos(nombre),
                     rival VARCHAR(30) NOT NULL references brutos(nombre),
                     victoria BOOL,
                     primary key(fecha,nombre,rival))

        CREATE TABLE nombres (nombre VARCHAR(30),
                              primary key(nombre))


        CREATE TABLE alumnoProductivo(fecha DATE NOT NULL,
                                      nombre VARCHAR(30) NOT NULL references brutos(nombre),
                                      ancestro VARCHAR(30) NOT NULL references brutos(nombre),
                                      ip     VARCHAR(20) NOT NULL,
                                      primary key(nombre))


#random row

SELECT nombre FROM nombres ORDER BY RAND() LIMIT 1