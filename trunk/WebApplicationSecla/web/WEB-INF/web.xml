<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>validateSrv</servlet-name>
        <servlet-class>ajax.AjaxServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>datosUsuario</servlet-name>
        <servlet-class>ajax.DatosUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>verBoleta</servlet-name>
        <servlet-class>ajax.VerBoletaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>validateSrv</servlet-name>
        <url-pattern>/validate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>datosUsuario</servlet-name>
        <url-pattern>/datosUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>verBoleta</servlet-name>
        <url-pattern>/verBoleta</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        </welcome-file-list>
    </web-app>
